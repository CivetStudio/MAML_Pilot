<ROOT>

	<!-- <NameHolder name="calendar" /> -->
	<ValueHolder name="CalendarCode" />
	<ValueHolder name="CalendarX" />
	<ValueHolder name="CalendarY" />
	<ValueHolder name="CalendarW" />
	<ValueHolder name="CalendarH" />
	<ValueHolder name="CalendarD" />
	<ValueHolder name="CalendarStart" />
	<ValueHolder name="CalendarNum" type="string" />
	<ValueHolder name="CalendarTodayBg" type="string" />
	<ValueHolder name="CalendarTodayNum" type="string" />
	<ValueHolder name="CalendarRotation" default="0" />
	<ValueHolder name="CalendarOffsetY" default="0" />
	<ValueHolder name="CalendarPivotX" default="0" />
	<ValueHolder name="CalendarPivotY" default="0" />
	<ValueHolder name="CalendarColorNum" type="string" default="#FFFFFF" />
	<ValueHolder name="CalendarSizeNum" default="48" />
	<ValueHolder name="CalendarTodayColor" type="string" default="#FFFFFF" />
	<ValueHolder name="CalendarTodaySize" default="48" />


	<!-- <Var name="CalendarX" expression="240" type="number" />
	<Var name="CalendarY" expression="540" type="number" />
	<Var name="CalendarW" expression="100" type="number" />
	<Var name="CalendarH" expression="100" type="number" /> -->

	<!-- 闰年及月份数据 -->
	<Var name="_month" expression="int(#month)" type="number" _glb="1" />

	<Var name="LeapYear" expression="ifelse(eq(int(#year%4),0)*ne(int(#year%100),0)+eq(int(#year%400),0),1,0)" />
	<Var name="HasDateF29" expression="ifelse((eq(#LeapYear,1)+ne(#_month,2))*eq(#HasDateF30,0)*eq(#HasDateF31,0),1,0)" />
	<Var name="HasDateF30" expression="ifelse(ne(#_month,2)*eq(#HasDateF31,0),1,0)" />
	<Var name="HasDateF31" expression="ifelse(le(#_month,1)+eq(#_month,3)+eq(#_month,5)+eq(#_month,7)+eq(#_month,8)+eq(#_month,10)+eq(#_month,12),1,0)" />
	<Var name="HasDate29" expression="ifelse(eq(#LeapYear,1)+ne(int(#_month+1),2),1,0)" />
	<Var name="HasDate30" expression="ifelse(ne(int(#_month+1),2),1,0)" />
	<Var name="HasDate31" expression="ifelse(eq(int(#_month+1),1)+eq(int(#_month+1),3)+eq(int(#_month+1),5)+eq(int(#_month+1),7)+eq(int(#_month+1),8)+eq(int(#_month+1),10)+eq(int(#_month+1),12),1,0)" />

	<Var name="prevDayWeek_0" expression="int(#day_of_week-1)" type="number" />
	<Var name="nextDayWeek_0" expression="int(#day_of_week-1)" type="number" />

	<Var name="WeekDate_f0" expression="#date" type="number" />
	<Var name="WeekDate_0" expression="#date" type="number" />

	<!-- 后31天的星期与日期 -->
	<C_Array begin="1" end="42" indexName="_d" >

		<!-- <Var name="nextDayWeek_#_d" expression="int(#day_of_week-1+#_d+42)%7" /> -->
		<Var name="WeekDate_#_d" expression="ifelse(eq(#WeekDate_{#_d-1},28),ifelse(#HasDate29,29,1),eq(#WeekDate_{#_d-1},29),ifelse(#HasDate30,30,1),eq(#WeekDate_{#_d-1},30),ifelse(#HasDate31,31,1),eq(#WeekDate_{#_d-1},31),1,#WeekDate_{#_d-1}+1)" />

	</C_Array>

	<!-- 前31天的星期与日期 -->
	<C_Array begin="1" end="42" indexName="_p" >

		<!-- <Var name="prevDayWeek_#_p" expression="int(#day_of_week-1-#_p+42)%7" /> -->
		<Var name="WeekDate_f#_p" expression="ifelse(eq(#WeekDate_f{#_p-1},1),ifelse(eq((#_month+1),3),28+#LeapYear,31*#HasDateF31+30*#HasDateF30+29*#HasDateF29),#WeekDate_f{#_p-1}-1)" />

	</C_Array>

	<!-- 起止点变量 -->
	<Var name="prevDayEnd" expression="ifelse(#_on_cell_mode,ifelse(eq(#day_of_week,1),7,7+int(#day_of_week-1)),ifelse(#isWeekCal,int(#day_of_week-1),ifelse(#calendarD,max(#date-1,0)+#weekStartsIn,max(#date-1,0))))" type="number" />
	<Var name="nextDayEnd" expression="ifelse(#_on_cell_mode,ifelse(eq(#day_of_week,1),7-1,7-int(#day_of_week-1)-1),ifelse(#isWeekCal,7-#day_of_week,ifelse(#calendarD,max(#_monthMaxDay-#date,0)+(42-7-#_monthMaxDay-#weekStartsIn),max(#_monthMaxDay-#date,0))))" type="number" />
	<!-- 每月最大天数 -->
	<Var name="_monthMaxDay" expression="ifelse(eq(int(#_month+1),1),31,eq(int(#_month+1),2),28+#LeapYear,eq(int(#_month+1),3),31,eq(int(#_month+1),4),30,eq(int(#_month+1),5),31,eq(int(#_month+1),6),30,eq(int(#_month+1),7),31,eq(int(#_month+1),8),31,eq(int(#_month+1),9),30,eq(int(#_month+1),10),31,eq(int(#_month+1),11),30,eq(int(#_month+1),12),31,31)" />

	<Var name="_monthMaxDay_L" expression="ifelse(eq(int(#_month),1),31,eq(int(#_month),2),28+#LeapYear,eq(int(#_month),3),31,eq(int(#_month),4),30,eq(int(#_month),5),31,eq(int(#_month),6),30,eq(int(#_month),7),31,eq(int(#_month),8),31,eq(int(#_month),9),30,eq(int(#_month),10),31,eq(int(#_month),11),30,eq(int(#_month),12),31,31)" />
	<!-- <Var name="_monthMaxDay_N" expression="ifelse(eq(int(#_month+1),1),31,eq(int(#_month+1),2),28+#LeapYear,eq(int(#_month+1),3),31,eq(int(#_month+1),4),30,eq(int(#_month+1),5),31,eq(int(#_month+1),6),30,eq(int(#_month+1),7),31,eq(int(#_month+1),8),31,eq(int(#_month+1),9),30,eq(int(#_month+1),10),31,eq(int(#_month+1),11),30,eq(int(#_month+1),12),31,31)" /> -->


	<Var name="_monthAdd" expression="0" type="number" persist_const="true" _const="true" _glb="true" />
	<Var name="_monthMaxDiff" expression="0" type="number" persist_const="true" _const="true" />
	<Var name="_calMonthDiff" expression="#_monthAdd" threshold="1" >
		<Trigger>
			<VariableCommand name="_monthMaxDay_N" expression="int(#_monthMaxDay)*1" type="number" />
			<VariableCommand condition="lt(#_monthAdd,0)*eq(#_monthPrevBack,1)" name="_monthMaxDiff" expression="#_monthMaxDiff-int(#_monthMaxDay_N)" type="number" />
			<VariableCommand condition="lt(#_monthAdd,0)*eq(#_monthPrevBack,0)" name="_monthMaxDiff" expression="#_monthMaxDiff+int(#_monthMaxDay_L)" type="number" />

			<VariableCommand condition="gt(#_monthAdd,0)*eq(#_monthBack,1)" name="_monthMaxDiff" expression="#_monthMaxDiff-int(#_monthMaxDay_L)" type="number" />
			<VariableCommand condition="gt(#_monthAdd,0)*eq(#_monthBack,0)" name="_monthMaxDiff" expression="#_monthMaxDiff+int(#_monthMaxDay_N)" type="number" />

			<VariableCommand condition="eq(#_monthAdd,0)" name="_monthMaxDiff" expression="0" type="number" />
		</Trigger>
	</Var>
	<!-- 每月的第一天 -->
	<Var name="weekStartsIn_N" expression="int((7-(#date-#day_of_week+1)%7)%7+1-CalendarStart+#_on_cell_mode+int(#_monthMaxDiff%7))%7" />
	<Var name="weekStartsIn_L" expression="int((7-(#date-#day_of_week+1+int(#_monthMaxDiff%7))%7)%7+1-CalendarStart+#_on_cell_mode)%7" />
	<Var name="weekStartsIn" expression="ifelse(lt(#_monthAdd,0),#weekStartsIn_L,#weekStartsIn_N)" type="number" />
	<!-- 周历模式 -->
	<!-- <Var name="isWeekCal" expression="1" type="number" /> -->
	<!-- <Var name="isWeekTop" expression="1" type="number" /> -->

	<!-- 05.18 Add 2 Lines Mode -->
	<!-- <Var name="_on_cell_mode" expression="1" type="number" /> -->

	<!-- 日期x居中 -->
	<Var name="calendarX" expression="CalendarX" />
	<!-- 日期y居中 -->
	<Var name="calendarY" expression="CalendarY" />
	<!-- 日期间距宽度 -->
	<Var name="calendarW" expression="CalendarW" />
	<!-- 日期间距高度 -->
	<Var name="calendarH" expression="CalendarH" />
	<Var name="calendarD" expression="CalendarD*(1-#isWeekCal)+#_on_cell_mode" />

	<Var name="_on_cell_y" expression="#_on_cell_mode*int(#calendarY-#_calendar_y.0+#calendarH)" type="number" />

	<Group y="#_on_cell_y" >

		<!-- 日历 -->
		<C_Array count="32" indexName="_i" >

			<!-- <Var name="_on_cell_n_#_i" expression="ifelse(#_on_cell_mode,eq(#_calendar_y_n.#_i-#_calendar_y.0,0)+eq(#_calendar_y_n.#_i-#_calendar_y.0,0-CalendarH*1),1)" type="number" /> -->
			<!-- <Var name="_on_cell_#_i" expression="ifelse(#_on_cell_mode,eq(#_calendar_y.#_i-#_calendar_y.0,0)+eq(#_calendar_y.#_i-#_calendar_y.0,0-CalendarH*1),1)" type="number" /> -->

			<!-- if above current date -->
			<!-- <Var name="_on_cell_n_#_i:f1" expression="eq(#_calendar_y_n.#_i-#_calendar_y.0,0-CalendarH*1)" type="number" />
				<Var name="_on_cell_n_#_i:0" expression="eq(#_calendar_y_n.#_i-#_calendar_y.0,0)" type="number" />

				<Var name="_on_cell_#_i:f1" expression="eq(#_calendar_y.#_i-#_calendar_y.0,0-CalendarH*1)" type="number" />
				<Var name="_on_cell_#_i:0" expression="eq(#_calendar_y.#_i-#_calendar_y.0,0)" type="number" />
			-->

			<!-- 今年的第$天 -->
			<!-- <Var expression="ifelse(eq(#_month,0),#WeekDate_f#_i+0,eq(#_month,1),#WeekDate_f#_i+31,eq(#_month,2),#WeekDate_f#_i+59,eq(#_month,3),#WeekDate_f#_i+90,eq(#_month,4),#WeekDate_f#_i+120,eq(#_month,5),#WeekDate_f#_i+151,eq(#_month,6),#WeekDate_f#_i+181,eq(#_month,7),#WeekDate_f#_i+212,eq(#_month,8),#WeekDate_f#_i+243,eq(#_month,9),#WeekDate_f#_i+273,eq(#_month,10),#WeekDate_f#_i+304,eq(#_month,11),#WeekDate_f#_i+334,0)+#LeapYear*ge(#_month,2)-1" name="da_prev_#_i" type="number" /> -->
			<!-- <Var expression="ifelse(eq(#_month,0),#WeekDate_#_i+0,eq(#_month,1),#WeekDate_#_i+31,eq(#_month,2),#WeekDate_#_i+59,eq(#_month,3),#WeekDate_#_i+90,eq(#_month,4),#WeekDate_#_i+120,eq(#_month,5),#WeekDate_#_i+151,eq(#_month,6),#WeekDate_#_i+181,eq(#_month,7),#WeekDate_#_i+212,eq(#_month,8),#WeekDate_#_i+243,eq(#_month,9),#WeekDate_#_i+273,eq(#_month,10),#WeekDate_#_i+304,eq(#_month,11),#WeekDate_#_i+334,0)+#LeapYear*ge(#_month,2)" name="da_next_#_i" type="number" /> -->

			<Var name="_calendar_x.#_i" expression="#calendarX+#calendarW*int((#weekStartsIn*(1-#calendarD)*(1-#isWeekCal)+#prevDayEnd-#_i)%7)" type="number" />
			<Var name="_calendar_y.#_i" expression="#calendarY+#calendarH*int((#weekStartsIn*(1-#calendarD)*(1-#isWeekCal)+#prevDayEnd-#_i)/7)+(CalendarOffsetY)*(int(#_calendar_x.#_i-#calendarX)/#calendarW)" type="number" />
			<!-- <Var name="_calendar_x_pos.#_i" expression="int(#_calendar_x.#_i-#calendarX)/#calendarW" type="number" /> -->

			<Var name="_calendar_x_n.#_i" expression="#calendarX+#calendarW*int((#weekStartsIn*(1-#calendarD)*(1-#isWeekCal)+1+#prevDayEnd+#_i)%7)" type="number" />
			<Var name="_calendar_y_n.#_i" expression="#calendarY+#calendarH*int((#weekStartsIn*(1-#calendarD)*(1-#isWeekCal)+1+#prevDayEnd+#_i)/7)+(CalendarOffsetY)*(int(#_calendar_x_n.#_i-#calendarX)/#calendarW)" type="number" />
			<!-- <Var name="_calendar_x_n_pos.#_i" expression="int(#_calendar_x_n.#_i-#calendarX)/#calendarW" type="number" /> -->

			<!-- <Var name="_calendar_v_n.#_i" expression="ifelse(le(#WeekDate_{#_i+1},#_monthMaxDay)*lt(#_i,#nextDayEnd),1,0)" type="number" /> -->
			<!-- <Var name="_calendar_a.#_i" expression="ifelse(#calendarD,ifelse(gt(#_i,#prevDayEnd-#weekStartsIn)*ne(#_on_cell_mode,1),128,255),255)" type="number" /> -->
			<!-- <Var name="_calendar_a_n.#_i" expression="ifelse(#calendarD,ifelse(ge(#_i,#nextDayEnd-(42-7-#_monthMaxDay-#weekStartsIn)),128,255),255)" type="number" /> -->

			<!-- 今日及之前 alpha="ifelse(#calendarD,ifelse(gt(#_i,#prevDayEnd-#weekStartsIn)*ne(#_on_cell_mode,1),128,255),255)" -->
			<Image x="#_calendar_x.#_i" y="#_calendar_y.#_i" align="center" alignV="center" src="CalendarNum" rotation="(CalendarRotation)" pivotX="(CalendarPivotX)" pivotY="(CalendarPivotY)" srcid="#WeekDate_f#_i" visibility="eq(CalendarCode,0)*le(#_i,#prevDayEnd)" />
			<!-- 之后 alpha="ifelse(#calendarD,ifelse(ge(#_i,#nextDayEnd-(42-7-#_monthMaxDay-#weekStartsIn)),128,255),255)" -->
			<Image x="#_calendar_x_n.#_i" y="#_calendar_y_n.#_i" align="center" alignV="center" src="CalendarNum" rotation="(CalendarRotation)" pivotX="(CalendarPivotX)" pivotY="(CalendarPivotY)" srcid="#WeekDate_{#_i+1}" visibility="eq(CalendarCode,0)*le(#WeekDate_{#_i+1},#_monthMaxDay)*lt(#_i,#nextDayEnd)" />

			<!-- 今日及之前 alpha="ifelse(#calendarD,ifelse(gt(#_i,#prevDayEnd-#weekStartsIn)*ne(#_on_cell_mode,1),128,255),255)" -->
			<ImageNumber x="#_calendar_x.#_i" y="#_calendar_y.#_i" align="center" alignV="center" src="CalendarNum" rotation="(CalendarRotation)" pivotX="(CalendarPivotX)" pivotY="(CalendarPivotY)" number="#WeekDate_f#_i" visibility="eq(CalendarCode,1)*le(#_i,#prevDayEnd)" />
			<!-- 之后 alpha="ifelse(#calendarD,ifelse(ge(#_i,#nextDayEnd-(42-7-#_monthMaxDay-#weekStartsIn)),128,255),255)" -->
			<ImageNumber x="#_calendar_x_n.#_i" y="#_calendar_y_n.#_i" align="center" alignV="center" src="CalendarNum" rotation="(CalendarRotation)" pivotX="(CalendarPivotX)" pivotY="(CalendarPivotY)" number="#WeekDate_{#_i+1}" visibility="eq(CalendarCode,1)*le(#WeekDate_{#_i+1},#_monthMaxDay)*lt(#_i,#nextDayEnd)" />

			<Text x="#calendarX+#calendarW*#_i" y="#calendarY-#calendarH" align="center" alignV="center" color="CalendarColorNum" size="CalendarSizeNum" text="{substr('日一二三四五六',#_i,1)}" visibility="eq(CalendarCode,2)*lt(#_i,7)*eq(#isWeekTop,1)" />
			<!-- 今日及之前 alpha="ifelse(#calendarD,ifelse(gt(#_i,#prevDayEnd-#weekStartsIn)*ne(#_on_cell_mode,1),128,255),255)" -->
			<Text x="#_calendar_x.#_i" y="#_calendar_y.#_i" align="center" alignV="center" color="CalendarColorNum" size="CalendarSizeNum" format="%d" paras="#WeekDate_f#_i" visibility="eq(CalendarCode,2)*le(#_i,#prevDayEnd)*le(#_i,#prevDayEnd)" />
			<!-- 之后 alpha="ifelse(#calendarD,ifelse(ge(#_i,#nextDayEnd-(42-7-#_monthMaxDay-#weekStartsIn)),128,255),255)" -->
			<Text x="#_calendar_x_n.#_i" y="#_calendar_y_n.#_i" align="center" alignV="center" color="CalendarColorNum" size="CalendarSizeNum" format="%d" paras="#WeekDate_{#_i+1}" visibility="eq(CalendarCode,2)*le(#WeekDate_{#_i+1},#_monthMaxDay)*lt(#_i,#nextDayEnd)" />

		</C_Array>

		<!-- 今日 -->
		<Image x="#_calendar_x.0" y="#_calendar_y.0" align="center" alignV="center" src="CalendarTodayBg" visibility="eq(CalendarCode,0)*eq(#_monthAdd,0)" />
		<!-- 今日 -->
		<Image x="#_calendar_x.0" y="#_calendar_y.0" align="center" alignV="center" src="CalendarTodayBg" visibility="eq(CalendarCode,1)*eq(#_monthAdd,0)" />
		<!-- 今日 -->
		<Image x="#_calendar_x.0" y="#_calendar_y.0" align="center" alignV="center" src="CalendarTodayBg" visibility="eq(CalendarCode,2)*eq(#_monthAdd,0)" />

		<!-- 今日 -->
		<Image x="#_calendar_x.0" y="#_calendar_y.0" align="center" alignV="center" src="CalendarTodayNum" rotation="(CalendarRotation)" pivotX="(CalendarPivotX)" pivotY="(CalendarPivotY)" srcid="#date" visibility="eq(CalendarCode,0)*eq(#_monthAdd,0)" />
		<!-- 今日 -->
		<ImageNumber x="#_calendar_x.0" y="#_calendar_y.0" align="center" alignV="center" src="CalendarTodayNum" rotation="(CalendarRotation)" pivotX="(CalendarPivotX)" pivotY="(CalendarPivotY)" number="#date" visibility="eq(CalendarCode,1)*eq(#_monthAdd,0)" />
		<!-- 今日 -->
		<Text x="#_calendar_x.0" y="#_calendar_y.0" align="center" alignV="center" color="CalendarTodayColor" size="CalendarTodaySize" format="%d" paras="#date" visibility="eq(CalendarCode,2)*eq(#_monthAdd,0)" />

	</Group>

</ROOT>